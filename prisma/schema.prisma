// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Question {
  id          String   @id @default(cuid())
  content     String
  type        String   // "single" hoặc "multiple"
  options     String   // JSON array: ["A. Đáp án 1", "B. Đáp án 2", ...]
  correctAnswers String // JSON array: ["A", "B"] hoặc ["A"]
  explanation String?
  category    String?  // Lĩnh vực câu hỏi (ví dụ: Toán, Lý, Hóa, Văn, Anh, ...)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  examQuestions ExamQuestion[]
}

model Exam {
  id              String   @id @default(cuid())
  title           String
  description     String?
  questionCount   Int
  timeLimit       Int      // Thời gian làm bài (phút)
  startDate       DateTime // Thời gian mở bài thi
  endDate         DateTime // Thời gian đóng bài thi
  isActive        Boolean  @default(true) // Trạng thái bật/tắt thủ công
  isPublic        Boolean  @default(false) // Công khai (tất cả user có thể làm) hoặc chỉ user được gán
  shuffleQuestions Boolean @default(false) // Trộn câu hỏi
  shuffleAnswers  Boolean @default(false)  // Trộn đáp án
  requireAllQuestions Boolean @default(false) // Bắt buộc làm hết câu hỏi mới được nộp bài
  maxAttempts     Int      // Số lần làm bài tối đa
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  examQuestions   ExamQuestion[]
  examResults     ExamResult[]
  examAssignments ExamAssignment[]
  examGroups      ExamGroup[]
}

model ExamQuestion {
  id         String @id @default(cuid())
  examId     String
  questionId String
  order      Int    // Thứ tự câu hỏi trong bài thi
  exam       Exam   @relation(fields: [examId], references: [id], onDelete: Cascade)
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@unique([examId, questionId])
  @@index([examId])
}

model ExamResult {
  id            String   @id @default(cuid())
  examId        String
  studentName   String?
  studentId     String?
  score         Float    // Điểm số
  totalQuestions Int
  correctAnswers Int
  answers       String   // JSON: { questionId: ["A", "B"] }
  questionIds   String?  // JSON array: ["questionId1", "questionId2", ...] - Danh sách câu hỏi đã làm trong lần thi này
  timeSpent     Int      // Thời gian làm bài (giây)
  attemptNumber Int      // Lần làm bài thứ mấy
  completedAt   DateTime @default(now())
  exam          Exam     @relation(fields: [examId], references: [id], onDelete: Cascade)

  @@index([examId])
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String   // Hashed password
  role      String   @default("user") // "admin", "leader" hoặc "user"
  fullName  String?  // Họ và tên
  email     String?  // Email
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  examAssignments ExamAssignment[]
  userGroupMembers UserGroupMember[]
  taskAssignments TaskAssignment[]
}

model Category {
  id        String   @id @default(cuid())
  name      String   @unique // Tên lĩnh vực
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Video {
  id          String   @id @default(cuid())
  title       String   // Tiêu đề video
  description String?  // Mô tả video
  url         String   // URL video (YouTube, Vimeo, hoặc direct link)
  thumbnail   String?  // URL thumbnail
  category    String?  // Danh mục video
  isPublic    Boolean  @default(true) // Công khai hay không
  viewCount   Int      @default(0) // Số lượt xem
  uploadedBy  String?  // Username người upload
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  videoGroups VideoGroup[]
}

model Document {
  id          String   @id @default(cuid())
  title       String   // Tiêu đề tài liệu
  description String?  // Mô tả tài liệu
  url         String   // URL file PDF
  fileName    String   // Tên file gốc
  fileSize    Int      // Kích thước file (bytes)
  category    String?  // Danh mục tài liệu
  isPublic    Boolean  @default(true) // Công khai hay không
  downloadCount Int    @default(0) // Số lượt tải
  uploadedBy  String?  // Username người upload
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  documentGroups DocumentGroup[]
}

model ExamAssignment {
  id          String   @id @default(cuid())
  examId      String
  userId      String
  maxAttempts Int?     // Số lần làm bài tối đa cho user này (null = dùng maxAttempts của exam)
  assignedAt  DateTime @default(now())
  exam        Exam     @relation(fields: [examId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([examId, userId])
  @@index([examId])
  @@index([userId])
}

model UserGroup {
  id          String   @id @default(cuid())
  name        String   // Tên nhóm
  description String?  // Mô tả nhóm
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  members     UserGroupMember[]
  videoGroups VideoGroup[]
  documentGroups DocumentGroup[]
  examGroups  ExamGroup[]
}

model UserGroupMember {
  id        String   @id @default(cuid())
  userId    String
  groupId   String
  joinedAt  DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  group     UserGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([userId, groupId])
  @@index([userId])
  @@index([groupId])
}

model VideoGroup {
  id        String   @id @default(cuid())
  videoId   String
  groupId   String
  assignedAt DateTime @default(now())
  video     Video    @relation(fields: [videoId], references: [id], onDelete: Cascade)
  group     UserGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([videoId, groupId])
  @@index([videoId])
  @@index([groupId])
}

model DocumentGroup {
  id        String   @id @default(cuid())
  documentId String
  groupId   String
  assignedAt DateTime @default(now())
  document  Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  group     UserGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([documentId, groupId])
  @@index([documentId])
  @@index([groupId])
}

model ExamGroup {
  id        String   @id @default(cuid())
  examId    String
  groupId   String
  assignedAt DateTime @default(now())
  exam      Exam     @relation(fields: [examId], references: [id], onDelete: Cascade)
  group     UserGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([examId, groupId])
  @@index([examId])
  @@index([groupId])
}

model Settings {
  id        String   @id @default(cuid())
  key       String   @unique // Key của setting (ví dụ: 'login_background')
  value     String   // Giá trị (ví dụ: URL ảnh)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Permission {
  id          String   @id @default(cuid())
  code        String   @unique // Mã quyền (ví dụ: 'view_exams', 'create_exams', 'export_tasks')
  name        String   // Tên quyền dễ đọc (ví dụ: 'Xem bài thi', 'Tạo bài thi')
  description String?  // Mô tả chi tiết quyền
  category    String   // Nhóm quyền (ví dụ: 'exams', 'tasks', 'users', 'videos')
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  rolePermissions RolePermission[]
}

model RolePermission {
  id           String     @id @default(cuid())
  role         String     // Role: "admin", "leader", "user"
  permissionId String
  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)
  createdAt    DateTime   @default(now())

  @@unique([role, permissionId])
  @@index([role])
  @@index([permissionId])
}

model Task {
  id              String   @id @default(cuid())
  name            String   // Tên nhiệm vụ (ví dụ: "Thay thế TB 1 băng tần")
  description     String?  // Mô tả nhiệm vụ
  isActive        Boolean  @default(true) // Tắt/mở nhiệm vụ
  startDate       DateTime? // Thời gian bắt đầu thực hiện
  endDate         DateTime? // Thời gian kết thúc thực hiện
  dailyAssignmentCount Int @default(0) // Số lượng phiếu phân giao hàng ngày
  createdBy       String   // Username người tạo
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  customers       TaskCustomer[]
  assignments     TaskAssignment[]
}

model TaskCustomer {
  id              String   @id @default(cuid())
  taskId          String
  stt             Int      // Số thứ tự
  account         String   // Account khách hàng
  customerName    String   // Tên khách hàng
  address         String?  // Địa chỉ
  phone           String?  // Số điện thoại
  assignedUserId  String?  // ID người dùng được gán (từ cột NV thực hiện trong Excel)
  assignedUsername String? // Username người dùng được gán (để dễ query)
  assignedAt      DateTime? // Thời gian phân giao cho user (để filter theo ngày)
  isCompleted     Boolean  @default(false) // Đã hoàn thành hay chưa
  completedAt     DateTime? // Thời gian hoàn thành
  completedBy     String?  // Username người hoàn thành
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  task            Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@index([taskId])
  @@index([assignedUserId])
  @@index([assignedUsername])
  @@index([assignedAt])
}

model TaskAssignment {
  id              String   @id @default(cuid())
  taskId          String
  userId          String   // ID người dùng được gán nhiệm vụ
  assignedAt      DateTime @default(now())
  assignedBy      String   // Username người gán
  task            Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([taskId, userId])
  @@index([taskId])
  @@index([userId])
}