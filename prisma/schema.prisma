// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Question {
  id          String   @id @default(cuid())
  content     String
  type        String   // "single" hoặc "multiple"
  options     String   // JSON array: ["A. Đáp án 1", "B. Đáp án 2", ...]
  correctAnswers String // JSON array: ["A", "B"] hoặc ["A"]
  explanation String?
  category    String?  // Lĩnh vực câu hỏi (ví dụ: Toán, Lý, Hóa, Văn, Anh, ...)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  examQuestions ExamQuestion[]
}

model Exam {
  id              String   @id @default(cuid())
  title           String
  description     String?
  questionCount   Int
  timeLimit       Int      // Thời gian làm bài (phút)
  startDate       DateTime // Thời gian mở bài thi
  endDate         DateTime // Thời gian đóng bài thi
  isActive        Boolean  @default(true) // Trạng thái bật/tắt thủ công
  isPublic        Boolean  @default(false) // Công khai (tất cả user có thể làm) hoặc chỉ user được gán
  shuffleQuestions Boolean @default(false) // Trộn câu hỏi
  shuffleAnswers  Boolean @default(false)  // Trộn đáp án
  maxAttempts     Int      // Số lần làm bài tối đa
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  examQuestions   ExamQuestion[]
  examResults     ExamResult[]
  examAssignments ExamAssignment[]
}

model ExamQuestion {
  id         String @id @default(cuid())
  examId     String
  questionId String
  order      Int    // Thứ tự câu hỏi trong bài thi
  exam       Exam   @relation(fields: [examId], references: [id], onDelete: Cascade)
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@unique([examId, questionId])
  @@index([examId])
}

model ExamResult {
  id            String   @id @default(cuid())
  examId        String
  studentName   String?
  studentId     String?
  score         Float    // Điểm số
  totalQuestions Int
  correctAnswers Int
  answers       String   // JSON: { questionId: ["A", "B"] }
  questionIds   String?  // JSON array: ["questionId1", "questionId2", ...] - Danh sách câu hỏi đã làm trong lần thi này
  timeSpent     Int      // Thời gian làm bài (giây)
  attemptNumber Int      // Lần làm bài thứ mấy
  completedAt   DateTime @default(now())
  exam          Exam     @relation(fields: [examId], references: [id], onDelete: Cascade)

  @@index([examId])
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String   // Hashed password
  role      String   @default("user") // "admin" hoặc "user"
  fullName  String?  // Họ và tên
  email     String?  // Email
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  examAssignments ExamAssignment[]
}

model Category {
  id        String   @id @default(cuid())
  name      String   @unique // Tên lĩnh vực
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Video {
  id          String   @id @default(cuid())
  title       String   // Tiêu đề video
  description String?  // Mô tả video
  url         String   // URL video (YouTube, Vimeo, hoặc direct link)
  thumbnail   String?  // URL thumbnail
  category    String?  // Danh mục video
  isPublic    Boolean  @default(true) // Công khai hay không
  viewCount   Int      @default(0) // Số lượt xem
  uploadedBy  String?  // Username người upload
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Document {
  id          String   @id @default(cuid())
  title       String   // Tiêu đề tài liệu
  description String?  // Mô tả tài liệu
  url         String   // URL file PDF
  fileName    String   // Tên file gốc
  fileSize    Int      // Kích thước file (bytes)
  category    String?  // Danh mục tài liệu
  isPublic    Boolean  @default(true) // Công khai hay không
  downloadCount Int    @default(0) // Số lượt tải
  uploadedBy  String?  // Username người upload
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ExamAssignment {
  id          String   @id @default(cuid())
  examId      String
  userId      String
  maxAttempts Int?     // Số lần làm bài tối đa cho user này (null = dùng maxAttempts của exam)
  assignedAt  DateTime @default(now())
  exam        Exam     @relation(fields: [examId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([examId, userId])
  @@index([examId])
  @@index([userId])
}
